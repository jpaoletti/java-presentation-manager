<?xml version="1.0" encoding="UTF-8"?>
<presentation-manager>
    <property name="debug"          value="true"/>
    <property name="appversion"     value="1.3.0"/>
    <property name="template"       value="default"/>
    <property name="copyright"      value="Jeronimo Paoletti"/>
    <property name="multi-login"    value="true"/>
    <property name="welcome-page"   value="pages/_customindex.jsp"/>
    <property name="locale"         value=""/> <!-- en_US -->
    <property name="secure-urls"    value="true"/>
    <property name="audit-level" value="10"/>
    
    <property name="logger-class"    value="jpaoletti.jpm.core.log.Log4jLogger"/>
    <property name="logger-name"     value="jPM"/>
    <property name="hideable-header" value="true"/>

    <property name="default-data-access"
              value="jpaoletti.jpm.test.DataAccessTest"/>

    <property name="default-converter" 
              value="jpaoletti.jpm.struts.converter.DefaultStrutsConverter"/>
              
    <property name="security-connector" 
              value="jpaoletti.jpm.security.core.PMVoidSecurityConnector"/>

    <!-- Menu -->
    <property name="menu" value="${cfg}/jpm-menu.xml"/>

    <!-- locations -->
    <property name="locations" value="${cfg}/jpm-locations.xml"/>

    <!-- External Converters -->
    <property name="external-converters" value="${cfg}/jpm-econverters.xml"/>
    <property name="external-converters" value="${cfg}/jpm-econverters-sec.xml"/>

    <!-- Class Converters -->
    <property name="class-converters" value="${cfg}/jpm-class-converters.xml"/>

    <!-- Busissnes Entities -->

    <property name="entity" value="entities/simpleclass.xml"/>
    <property name="entity" value="entities/complexclass1.xml"/>
    <property name="entity" value="entities/complexclass2.xml"/>
    <property name="entity" value="entities/weakclass.xml"/>
    <property name="entity" value="entities/parentclass.xml"/>
    
    <!-- Security Entities-->
    <property name="entity" value="entities/entitycontainer.xml"/>
    <property name="entity" value="entities/pmsession.xml"/>
    <property name="entity" value="entities/secperm.xml"/>
    <property name="entity" value="entities/secuser.xml"/>
    <property name="entity" value="entities/secusergroup.xml"/>

    <!-- Monitors -->
    <property name="monitor" value="monitors/file.xml"/>
</presentation-manager>
