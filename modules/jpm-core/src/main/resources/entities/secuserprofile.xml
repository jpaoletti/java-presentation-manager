<?xml version='1.0' ?>
<entity id="secuserprofile" clazz="jpaoletti.jpm.security.core.PMSecurityUser">
    <dataAccess class="jpaoletti.jpm.ui.DataAccessUser" />
    <operations>
        <operation id="show" display="edit changepassword" />
        <operation id="edit" display="show" />
        <operation id="changepassword" display="edit show" />
    </operations>
    <field id="name">
        <converters>
            <econverter id="edit-name" operations="edit"/>
        </converters>
    </field>
    <field id="email">
        <converters>
            <econverter id="edit-mail" operations="edit"/>
        </converters>
    </field>
</entity>